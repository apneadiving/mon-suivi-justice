<div class='edit-appointment-type-slot-container nested-fields'>
  <div class='slot-container-line1'>
    <%= f.input :week_day, collection: SlotType.week_days.keys,
                           label_method: lambda {|k| t("simple_form.options.slot_type.week_day.#{k}")},
                           wrapper_html: { class: 'appointment-type-slot-form-line1' },
                           input_html: { class: 'form-select' } %>

    <%= f.input :starting_time, input_html: { class: 'form-select', value: f.object.starting_time.to_s },
                                wrapper: :custom_time,
                                wrapper_html: { class: 'appointment-type-slot-form-line1' },
                                start_hour: 8,
                                end_hour: 20,
                                minute_step: 5 %>
  </div>

  <div class='slot-container-line2'>
    <%= f.input :duration, wrapper_html: { class: 'appointment-type-slot-form-line2' } %>
    <%= f.input :capacity, wrapper_html: { class: 'appointment-type-slot-form-line2' } %>
    <div class='remove-slot-button-container'>
      <%= link_to_remove_association t('delete'), f %>
    </div>
  </div>
</div>
