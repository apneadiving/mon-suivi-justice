<h1 class='form-title'><%= t('edit_user_password_title') %></h1>

<%= simple_form_for(@user, :url => { :action => "update_password" }, html: { class: 'basic-form' } ) do |f| %>
  <%= f.input :password, :autocomplete => "off"  %>
  <%= f.input :password_confirmation %>
  <%= f.button :submit, t('submit'), class: 'form-submit-button' %>
<% end %>
