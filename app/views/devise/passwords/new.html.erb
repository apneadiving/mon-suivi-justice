<div class="login-form-container">
  <h2 class='login-title'><%= t(".forgot_your_password") %></h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'login-form' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs login-field-container">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  class: 'login-field' %>
    </div>

    <div class="form-actions login-button-container">
      <%= f.button :submit, t(".send_me_reset_password_instructions"), {class: 'submit'} %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
